<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <!-- Patch BasicMechtech to require RobCoManual analysis -->
  <Operation Class="PatchOperationAdd">
    <xpath>/Defs/ResearchProjectDef[defName="BasicMechtech"]</xpath>
    <value>
      <requiredAnalyzed>
        <li>RobCoManual</li>
      </requiredAnalyzed>
    </value>
  </Operation>

  <!-- Patch labels and descriptions for RobCo theme -->
  <Operation Class="PatchOperationReplace">
    <xpath>/Defs/ResearchProjectDef[defName="BasicMechtech"]/label</xpath>
    <value>Civilian RobCo Circuitry</value>
  </Operation>
  <Operation Class="PatchOperationReplace">
    <xpath>/Defs/ResearchProjectDef[defName="BasicMechtech"]/description</xpath>
    <value>Unlocks the secrets of pre-war RobCo robotics. Required for all further RobCo robot research.</value>
  </Operation>

  <Operation Class="PatchOperationReplace">
    <xpath>/Defs/ResearchProjectDef[defName="StandardMechtech"]/label</xpath>
    <value>Military RobCo Circuitry</value>
  </Operation>
  <Operation Class="PatchOperationReplace">
    <xpath>/Defs/ResearchProjectDef[defName="StandardMechtech"]/description</xpath>
    <value>Enables construction and control of standard RobCo robots.</value>
  </Operation>

  <Operation Class="PatchOperationReplace">
    <xpath>/Defs/ResearchProjectDef[defName="HighMechtech"]/label</xpath>
    <value>Advanced General Atomic Cybernetics</value>
  </Operation>
  <Operation Class="PatchOperationReplace">
    <xpath>/Defs/ResearchProjectDef[defName="HighMechtech"]/description</xpath>
    <value>Unlocks advanced RobCo robot types and upgrades.</value>
  </Operation>

  <Operation Class="PatchOperationReplace">
    <xpath>/Defs/ResearchProjectDef[defName="UltraMechtech"]/label</xpath>
    <value>Secret General Atomics Design Documents</value>
  </Operation>
  <Operation Class="PatchOperationReplace">
    <xpath>/Defs/ResearchProjectDef[defName="UltraMechtech"]/description</xpath>
    <value>Unlocks the most powerful and secret RobCo robots.</value>
  </Operation>
</Patch>
