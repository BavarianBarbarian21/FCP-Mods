	<Operation Class="PatchOperationReplace">
			<xpath>/Defs/RecipeDef[defName="LightMechanoidRecipe"]</xpath>
			<value>
				<RecipeDef>
					<defName>LightMechanoidRecipe</defName>
					<label>craft light RobCo robot</label>
					<description>Combine parts to craft a light RobCo robot.</description>
					<workAmount>12000</workAmount>
					<ingredients>
						<li>
							<filter>
								<thingDefs>
									<li>Steel</li>
								</thingDefs>
							</filter>
							<count>100</count>
						</li>
						<li>
							<filter>
								<thingDefs>
									<li>ComponentIndustrial</li>
								</thingDefs>
							</filter>
							<count>1</count>
						</li>
						<li>
							<filter>
								<thingDefs>
									<li>SubcoreBasic</li>
								</thingDefs>
							</filter>
							<count>1</count>
						</li>
					</ingredients>
					<products>
						<RobCo_LightMechanoid>1</RobCo_LightMechanoid>
					</products>
					<workSkill>Crafting</workSkill>
				</RecipeDef>
			</value>
		</Operation>
