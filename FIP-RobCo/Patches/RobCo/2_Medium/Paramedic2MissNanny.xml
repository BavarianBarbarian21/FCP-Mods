    <xpath>/Defs/PawnKindDef[defName="Mech_Paramedic"]</xpath>
    <value>
      <PawnKindDef ParentName="LightMechanoidKind">
        <defName>Mech_Paramedic</defName>
        <label>Miss Nanny</label>
        <race>Mech_Paramedic</race>
        <!--<combatPower>10</combatPower>-->
        <lifeStages>
          <li>
            <bodyGraphicData>
              <texPath>RobCo/Nanny/Nanny</texPath>
              <shaderType>CutoutWithOverlay</shaderType>
              <graphicClass>Graphic_Multi</graphicClass>
              <drawSize>1.25</drawSize>
              <shadowData>
                <volume>(0.3, 0.4, 0.3)</volume>
                <offset>(0,0,-0.25)</offset>
              </shadowData>
            </bodyGraphicData>
          </li>
          <!--  <li>
            <bodyGraphicData>
              <texPath>RobCo/Nanny/Nanny</texPath>
