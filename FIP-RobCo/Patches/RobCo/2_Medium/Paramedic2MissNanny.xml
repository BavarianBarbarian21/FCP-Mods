<?xml version="1.0" encoding="utf-8" ?>
<Patch>
  <!-- Miss Nanny ThingDef -->
  <Operation Class="PatchOperationReplace">
    <xpath>/Defs/ThingDef[defName="Mech_Paramedic"]</xpath>
    <value>
      <ThingDef ParentName="Floating">
        <defName>Mech_Paramedic</defName>
        <label>Miss Nanny</label>
        <description>This is an Miss Nanny.</description>
        <statBases>
          <MoveSpeed>5</MoveSpeed>
        </statBases>
        <race>
          <body>Mech_Agrihand</body>
          <mechEnabledWorkTypes>
            <li>Doctor</li>
            <li>Warden</li>
          </mechEnabledWorkTypes>
          <mechWorkTypePriorities>
            <Warden>2</Warden>
          </mechWorkTypePriorities>
          <lifeStageAges>
            <li>
              <def>MechanoidFullyFormed</def>
              <minAge>0</minAge>
              <soundWounded>Nanny_Wounded</soundWounded>
              <soundDeath>Nanny_Death</soundDeath>
              <soundCall>Nanny_Call</soundCall>
              <soundAngry>Nanny_Angry</soundAngry>
            </li>
            <!--  <li>
              <def>MechanoidFullyFormed</def>
              <minAge>100</minAge>
              <soundWounded>Nanny_Wounded</soundWounded>
              <soundDeath>Nanny_Death</soundDeath>
              <soundCall>Nanny_Call</soundCall>
              <soundAngry>Nanny_Angry</soundAngry>
            </li>-->
          </lifeStageAges>
        </race>
      </ThingDef>
    </value>
  </Operation>

  <!-- Miss Nanny PawnKindDef -->
